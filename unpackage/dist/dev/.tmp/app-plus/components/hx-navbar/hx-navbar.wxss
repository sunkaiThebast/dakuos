.hd {
  overflow: hidden;
}
.hx-status-bar {
  display: block;
  width: 100%;
  height: 20px;
  height: var(--status-bar-height);
}
.hx-navbar uni-view,
.hx-navbar uni-scroll-view,
.hx-navbar uni-swiper,
.hx-navbar uni-button,
.hx-navbar uni-input,
.hx-navbar uni-textarea,
.hx-navbar uni-label,
.hx-navbar uni-navigator,
.hx-navbar uni-image {
  box-sizing: unset;
}
.hx-navbar {
  padding-top: 0;
  overflow: hidden;
}
.hx-navbar__content {
    display: block;
    position: relative;
    width: 100%;
    background-color: #ffffff;
}
.hx-navbar__content .hx-navbar__content_view {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.hx-navbar__header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
            flex-direction: row;
    width: 100%;
    height: 44px;
    line-height: 44px;
    font-size: 16px;
}
.hx-navbar__header-btns {
      display: -webkit-inline-box;
      display: -webkit-inline-flex;
      display: inline-flex;
      -webkit-flex-wrap: nowrap;
              flex-wrap: nowrap;
      -webkit-flex-shrink: 0;
              flex-shrink: 0;
      width: 120rpx;
      padding: 0 12rpx;
}
.hx-navbar__header-btns:first-child {
        padding-left: 0;
}
.hx-navbar__header-btns:last-child {
        width: 60rpx;
}
.hx-navbar__header-btns-right:last-child {
        width: 120rpx;
        text-align: right;
        -webkit-box-orient: horizontal;
        -webkit-box-direction: reverse;
        -webkit-flex-direction: row-reverse;
                flex-direction: row-reverse;
}
.hx-navbar__header-container {
      width: 100%;
      margin: 0 10rpx;
}
.hx-navbar__header-container-inner {
        width: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        font-size: 30rpx;
}
.hx-navbar__placeholder-view {
    height: 44px;
}
.hx-navbar--fixed {
    position: fixed;
    top: 0;
    z-index: 998;
}
.hx-navbar--shadow {
    box-shadow: 0 1px 6px #ccc;
}
.hx-navbar--border:after {
    position: absolute;
    z-index: 3;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    content: '';
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    background-color: #c8c7cc;
}

